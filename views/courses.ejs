<div style="display: flex; flex-wrap: wrap; justify-content: center; align-items: center;">
    <% for(course of courses) { %>
        <div style="margin-right: 20px; width: 275px; height: 225px; border: solid darkcyan 2px; display: flex; justify-content: center; align-items: center; flex-direction: column;">
            <div>
                <img src="data:image/jpeg;base64, <%= course.image_object.toString('base64') %>" style="width: 270px; height: 170px;">
                
            </div>
            <div>
                <p></p><a href="/learn/course/<%= course.course_id %>"><%= course.course_name %></a></p>
            </div>
        </div>
    <% } %>
</div>