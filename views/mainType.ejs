

<form method="POST" action="/teacher/addNewExercise/<%= testID %>">
    <div style="display: flex; justify-content: center; align-items: center; flex-direction: column;">
        <div>
            <h3>Válassza ki a feladat típusát!</h3>
        </div>

        <div style="border: solid 2px darkcyan">
            <input type="radio" name="type" value="click"> Feleletválasztós
            <div style="margin-top: 15px;">
                <img src="data:image/jpeg;base64, <%= clickImage.image_object.toString('base64') %>" style="width: 600px; height: 150px;"/>
            </div>
        </div>
        <div style="margin-top: 30px; border: solid 2px darkcyan">
            <input type="radio" name="type" value="drag"> "Drag and drop" típusú
            <div style="margin-top: 15px;">
                <img src="data:image/jpeg;base64, <%= dragImage.image_object.toString('base64') %>" style="width: 600px; height: 200px;"/>
            </div>
        </div>
        <div style="margin-top: 15px; margin-left: 550px;">
            <button>Kiválaszt</button>
        </div>
    </div>
</form>