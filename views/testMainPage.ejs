<style>

.container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: #ffffff;
    border: 2px solid darkcyan;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin: 20px;
    width: 60%;
    border-radius: 10px;
    font-size: 18px;
}

h3 {
    color: darkcyan;
    margin-bottom: 20px;
}

a {
    text-decoration: none;
    color: white;
    background-color: darkcyan;
    padding: 10px 20px;
    border-radius: 5px;
    transition: background-color 0.3s;
}

a:hover {
    background-color: #008080;
}

h4 {
    color: red;
}

.message {
    margin-bottom: 20px;
}

</style>
<div class="container">
    <div>
        <h3><%= scheduled.test_name %> nevű feladatsor</h3>
    </div>

    <div class="message">
        Megoldható eddig: <span id="formatted-end-time"></span>
    </div>

    <div>
        <% if(isSolvable) { %>
            <% if(isActive) { %>
                <a href="/learn/test/<%= scheduled.scheduled_tests_id %>/<%= exerciseID %>">Feladatsor megoldása</a>
            <% } else { %>
                <h4>A feladatsor már nem oldható meg!</h4>
            <% } %>
        <% } else { %>
            <a href="/learn/test/results/<%= scheduled.scheduled_tests_id %>/<%= userID %>">Eredmény megtekintése</a>
        <% } %>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const endTime = '<%= scheduled.end_time %>';
        const formattedEndTime = new Date(endTime).toLocaleString('hu-HU', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: 'numeric',
            minute: 'numeric',
            second: 'numeric'
        });
        document.getElementById('formatted-end-time').textContent = formattedEndTime;
    });
</script>
