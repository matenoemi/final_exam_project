<style>
    

form {
    font-size: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: #ffffff;
    padding: 20px;
    border: 2px solid darkcyan;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

form p {
    margin-bottom: 10px;
}

form input[type="file"] {
    margin-top: 10px;
}

form div {
    margin-top: 10px;
}

form input[type="radio"] {
    margin-left: 10px;
}

#groupContainer {
    margin-top: 10px;
}

#groupContainer div {
    margin-bottom: 5px;
}

form button {
    margin-top: 20px;
    padding: 10px 20px;
    font-size: 18px;
    background-color: darkcyan;
    color: #ffffff;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s;
}

form button:hover {
    background-color: #008080;
}
</style>

<form style="width: 500px; color: darkcyan;" method="POST" action="/teacher/uploadDragImages/<%= testID %>/<%= type %>" enctype="multipart/form-data">
    <div class="container" style="font-size: 20px; display: flex; justify-content: center; align-items: center; flex-direction: column;
    width: 500px;">
    
            <div style="margin-top: 20px;">
            <p>Képek feltöltése(min. 2, max. 8):</p>
            <input type="file" name="images" accept="image/*" multiple>
            </div>

        <% if(type=='ordering') { %>
            <div>
                <p>Elrendezés:</p>
                <input type="radio" name="direction" value="horizontal"> Vízszintes
                <input type="radio" name="direction" value="vertical"> Függőleges
            </div>
        <% } else { %>
            <div>
                <p>Csoportok száma:</p>
                <div style="margin-left: 40px;"><input type="radio" name="limit" value="2"> 2 </div>
                <div style="margin-left: 40px;"><input type="radio" name="limit" value="3"> 3 </div>
                <div style="margin-left: 40px;"><input type="radio" name="limit" value="4"> 4 </div>
            </div>
            <div>
                <p>Csoportok megnevezése:</p>
            </div>
            <div id="groupContainer">
                
            </div>
        <% } %>
            
        <div>
            <button>Feltölt</button>
        </div>
    </div>
</form>

<script>
    const directionRadios = document.getElementsByName("limit");
    directionRadios.forEach(radio => {
        radio.addEventListener('change', function() {
            if (this.checked) {
                const numOfGroups = parseInt(this.value);
                const groupContainer = document.getElementById('groupContainer');
                groupContainer.innerHTML = '';

                for (let i = 0; i < numOfGroups; i++) {
                    const input = document.createElement('input');
                    input.type = 'text';
                    input.name = `groupName`;
                    const divElement = document.createElement('div');
                    divElement.appendChild(input)
                    groupContainer.appendChild(divElement);
                }
            }
        });
    });
</script>
