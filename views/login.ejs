<% if (error) { %>
<p class="error"><%= error %></p>
<% } %> 

<form id="form" method="POST" action="/user/login" >
  <div style="display: flex; justify-content: center; align-items: center; flex-direction: column;">
      <div><h2>Bejelentkezés</h2></div>
      

      <table>

      <tr>
      <td>  
      <label for="email" class="item"> <span>Felhasználónév:</span> </label>
      </td>
      <td>
      <input
        id="email"
        class="input"
        type="text"
        name="email"
        value="<%= userData.email %>"
        class="item"
        placeholder="" >
        
        <!-- pattern="([a-z0-9_]|\-|\.)+@(([a-z0-9_]|\-)+\.)+[a-z]{2,10}" -->
      </td>
      </tr>
      
      <tr>
      <td>
      <label for="password" class="item"> <span>Jelszó:</span></label>
      </td>
      <td>
      <input
        id="password"
        class="input"
        type="password"
        name="password"
        value=""
        class="item"
        pattern=".{4,100}"
      >
      </td>
      </tr>

    </table>

      <div style="margin-top: 30px;">
      <label for="elkuld" class="item"> </label>
      <input id="elkuld" type="submit" class="item" name="submit" value="Bejelentkezés" >
      </div>
    </div>
</form>