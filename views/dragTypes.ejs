<form method="POST" action="/teacher/addNewDragExercise/<%= testID %>">
    <div style="display: flex; justify-content: center; align-items: center; flex-direction: column;">
        <div>
            <h3>Válassza ki a feladat típusát!</h3>
        </div>

        <div style="border: solid 2px darkcyan">
            <input type="radio" name="type" value="grouping"> Csoportosítás
            <div style="margin-top: 15px;">
                <img src="data:image/jpeg;base64, <%= images[0].image_object.toString('base64') %>" style="width: 600px; height: 200px;"/>
            </div>
        </div>

        <div style="margin-top: 30px; border: solid 2px darkcyan">
            <input type="radio" name="type" value="ordering"> Sorrendbe helyezés
            <div style="margin-top: 15px;">
                <img src="data:image/jpeg;base64, <%= images[1].image_object.toString('base64') %>" style="width: 600px; height: 200px;"/>
            </div>
        </div>

        <div style="margin-top: 15px; margin-left: 550px;">
            <button>Kiválaszt</button>
        </div>
    </div>
</form>