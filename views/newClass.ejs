<form method="POST" action="/admin/newClass" enctype="multipart/form-data">
<div style="display: flex; justify-content: center; align-items: center; flex-direction: column;">
    <div>
        <h3>
            Új osztály hozzáadása
        </h3>
    </div>
    <div>
        <label>Osztály neve:</label>
        <input type="text" name="name">
    </div>
    <div>
        <label>Évfolyam:</label>
        <input type="number" name="grade" min="1" max="12" step="1">
    </div>
    <div>
        <label>Osztály névsora(Excel fájl):</label>
        <input type="file" name="list">
    </div>
    <div>
        <label>Jelszó:</label>
        <input type="password" name="password">
    </div>

    <div>
        <button>Hozzáad</button>
    </div>
</div>
</form>